<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.devicemanagerims">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name="com.example.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.activity.AddNewDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity android:name="com.example.activity.AvailableActivity" >
        </activity>
        <activity android:name="com.example.activity.BorrowActivity" >
        </activity>
        <activity android:name="com.example.activity.AllDeviceActivity" >
        </activity>
        <activity android:name="com.example.activity.LostActivity" >
        </activity>
        <activity
            android:name="com.example.activity.DetailOfDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.BorrowDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.LostDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.ReturnDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.RevertDevice"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.image.CameraProcessing"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.History"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>

        <activity
            android:name="com.example.activity.TeamActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.activity.MemberActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
        </activity>
    </application>

</manifest>